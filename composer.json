{
  "name": "jamisonbryant/cakephp-har-recorder",
  "description": "CakePHP 5 plugin that records HTTP requests and responses as HAR files.",
  "type": "cakephp-plugin",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "cakephp/cakephp": "^5.0",
    "psr/http-message": "^2.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5.58 || ^11.5.3 || ^12.4",
    "cakephp/cakephp-codesniffer": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "JamisonBryant\\CakephpHarRecorder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JamisonBryant\\CakephpHarRecorder\\Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs --colors -p src/ tests/",
    "cs-fix": "phpcbf --colors -p src/ tests/",
    "phpstan": "tools/phpstan analyse",
    "stan": "@phpstan",
    "stan-baseline": "tools/phpstan --generate-baseline",
    "stan-setup": "phive install",
    "test-coverage": "phpunit --coverage-clover=clover.xml"
  },
  "extra": {
    "cakephp-plugin": {
      "name": "CakephpHarRecorder"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true
  }
}
